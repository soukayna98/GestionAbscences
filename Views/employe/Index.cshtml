
@model GestionAbscences.Data.employe
<title> Demange de Conge </title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<!-- Font Icon -->

<link rel="stylesheet" href="~/Content/cont2/fonts/material-icon/css/material-design-iconic-font.min.css">
<link rel="stylesheet" href="~/Content/cont2/vendor/nouislider/nouislider.min.css">

<div class="container">

    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-lg mt-0 " style="margin-right:2px; margin-left:60px;">

                <div class="card-header " style="background-color:#DCDCDC; margin-top:0px; padding:0px;"><h3 class="text-center font-weight-normal ">DEMANDE DE CONGE</h3></div>



                <div class="signup-form" style="margin-left:20px; ">

                    @using (Html.BeginForm("Dashboard1", "employe"))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()

                        <div class="row align-items-start">
                            <div class="col">
                                <div class="label-flex">

                                    <label class="text-center text-decoration-underline" style="color:cornflowerblue" for="TITRE">Choix de Congé</label>
                                </div>


                                <div>

                                </div>
                                <div class="form-group">

                                    <div class="form-radio">
                                        <div class="label-flex">
                                            <label for="regulier">1.REGULIER</label>
                                        </div>
                                        <div class="form-radio-group">
                                            <div class="form-radio-item">

                                                @{
                                                    string x = Session["nbjours"].ToString();
                                                    string x1 = Session["nbjoursR"].ToString();

                                                    var y = float.Parse(x);
                                                    var y1 = float.Parse(x1);
                                                    var y2 = y - 10;
                                                }
                                                 @if ((y1 > 0) && (7 >= y1))
                                               
                                                {
                                                    <input type="radio" name="typeCongeIdTypeconge" id="reliquat" value="reliquat">
                                                    <label for="reliquat">Reliquat</label>
                                                }
                                                else
                                                {
                                                    <input type="radio" name="typeCongeIdTypeconge" id="reliquat" value="reliquat" disabled>
                                                    <label style="color:gray;" for="reliquat">Reliquat</label>
                                                }


                                                <span class="check"></span>
                                            </div>


                                            <div class="form-radio-item">
                                                @* @if ((y > 14) && (24 >= y))*@
                                                @if (y1 > y2 && y1 <= y)


                                                {
                                                    <input type="radio" name="typeCongeIdTypeconge" id="1 ere tranche" value="1 ere tranche">
                                                    <label for="1 ere tranche">1 ere tranche</label>
                                                }
                                                else
                                                {
                                                    <input type="radio" name="typeCongeIdTypeconge" id="1 ere tranche" value="1 ere tranche" disabled>
                                                    <label style="color:gray;" for="1 ere tranche">1 ere tranche</label>
                                                }

                                                <span class="check"></span>
                                            </div>
                                            <div class="form-radio-item">

                                                @*@if ((y > 7) && (14 >= y))*@
                                                @if (y1 > 7 && y1 <= y2)
                                                {
                                                    <input type="radio" name="typeCongeIdTypeconge" id="2 eme tranche" value="2 eme tranche">
                                                    <label for="2 eme tranche">2 eme tranche</label>
                                                }
                                                else
                                                {
                                                    <input type="radio" name="typeCongeIdTypeconge" id="2 eme tranche" value="2 eme tranche" disabled>
                                                    <label style="color:gray;" for="2 eme tranche">2 ere tranche</label>
                                                }

                                                <span class="check"></span>
                                            </div>
                                        </div>

                                    </div>

                                </div>

                                <div class="label-flex">
                                    <label for="Exceptionnel/cr">2.EXCEPTIONNEL/CR</label>
                                </div>
                                <div class="form-radio-group">
                                    <div class="form-radio-item">
                                        <input type="radio" name="typeCongeIdTypeconge" id="1/2 journée" value="1/2 journée">
                                        <label for="1/2 journée">1/2 journée</label>
                                        <span class="check"></span>
                                    </div>
                                    <div class="form-radio-item">
                                        <input type="radio" name="typeCongeIdTypeconge" id="1 journée" value="1 journée">
                                        <label for="1 journée">1 journée</label>
                                        <span class="check"></span>
                                    </div>
                                    <div class="form-radio-item">
                                        <input type="radio" name="typeCongeIdTypeconge" id="1.5 journée" value="1.5 journée">
                                        <label for="1.5 journée">1.5 journée</label>
                                        <span class="check"></span>
                                    </div>
                                    <div class="form-radio-item">
                                        <input type="radio" name="typeCongeIdTypeconge" id="2 journée" value="2 journée">
                                        <label for="2 journée">2 journée</label>
                                        <span class="check"></span>
                                    </div>
                                </div>


                                <div class="label-flex">
                                    <label for="EXCEPTIONNEL A.SOLDE">3.EXCEPTIONNEL A.SOLDE</label>
                                </div>
                                <div class="form-radio-group">
                                    <div class="form-radio-item">
                                        <input type="radio" name="typeCongeIdTypeconge" id="Mariage" value="Mariage">
                                        <label for="Mariage">Mariage</label>
                                        <span class="check"></span>
                                    </div>
                                    <div class="form-radio-item">
                                        <input type="radio" name="typeCongeIdTypeconge" id="Naissance" value="Naissance">
                                        <label for="Naissance">Naissance</label>
                                        <span class="check"></span>
                                    </div>
                                    <div class="form-radio-item">
                                        <input type="radio" name="typeCongeIdTypeconge" id="Décès" value="Décès">
                                        <label for="Décès">Décès</label>
                                        <span class="check"></span>
                                    </div>
                                </div>
                                <div class="label-flex">
                                    <label for="RECUPERATION">4.RECUPERATION</label>
                                </div>

                                <div class="form-radio-group">
                                    <div class="form-radio-item">
                                        <input type="radio" name="typeCongeIdTypeconge" id="H.S" value="H.S">
                                        <label for="H.S">H.S</label>
                                        <span class="check"></span>
                                    </div>
                                    <div class="form-radio-item">
                                        <input type="radio" name="typeCongeIdTypeconge" id="J.R" value="J.R">
                                        <label for="J.R">J.R</label>
                                        <span class="check"></span>
                                    </div>
                                    <div class="form-radio-item">
                                        <input type="radio" name="typeCongeIdTypeconge" id="J.F" value="J.F">
                                        <label for="J.F">J.F</label>
                                        <span class="check"></span>
                                    </div>
                                </div>





                                <div class="form-input">


                                    <label for="chequeno">DU</label>
                                    <div class="row align-items-start">
                                        <div class="col">
                                            <input type="DATE" name="date1" id="date1" style="padding:2px;" />
                                        </div>
                                        <div class="col">
                                            <input type="time" id="time1" name="time1" style="padding:2px;">

                                        </div>
                                    </div>

                                </div>

                                <div class="label-flex">
                                    <label for="regulier">5.SANS SOLDE</label>
                                </div>

                                <div class="form-radio-group">
                                    <div class="row align-items-start">
                                        <div class="col">
                                            <div class="form-radio-item">
                                                <input type="radio" name="typeCongeIdTypeconge" id="heures" value="heures">
                                                <label for="heures">Heures</label>
                                                <input type="text" id="heureSansSolde" name="heureSansSolde" style="padding:2px;">
                                                <span class="check"></span>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-radio-item">
                                                <input type="radio" name="typeCongeIdTypeconge" id="jour" value="jours">
                                                <label for="jour">Jours</label>
                                                <input type="date" name="jourSansSolde" id="jourSansSolde" style="padding:2px;" />
                                                <span class="check"></span>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>
                            <div class="col-md-1">
                            </div>
                            <div class="col">
                                <br />




                                <div class="form-group col">
                                    <div></div>
                                    <div class="form-input">
                                        <div class="row align-items-start">
                                            <div class="col">
                                                <label for="nomComplet">Nom & Prenom</label>
                                                <input type="text" name="nomComplet" id="nomComplet" value="@Session["userName"]" style="padding:2px; " />
                                                @Html.ValidationMessageFor(model => model.NomComplet, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-input">
                                        <div class="row align-items-start">

                                            <div class="col">
                                                <label for="matricule">Matricule</label>
                                                <input type="text" name="matricule" id="matricule" value="@Session["matricule"]" style="padding:2px;" />
                                                @Html.ValidationMessageFor(model => model.idEmploye, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="col">
                                                <label for="affectation">Affectation</label>
                                                <input type="text" name="affectation" id="affectation" value="@Session["affectation"]" style="padding:2px;" />
                                                @Html.ValidationMessageFor(model => model.affectation, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-input ">

                                        <label for="DATE FIN">Durée de Congé</label>

                                        <label for="chequeno">DU</label>
                                        <div class="row align-items-start">
                                            <div class="col">
                                                <input type="DATE" name="dateDebut" id="dateDebut" style="padding:2px;" />
                                                @Html.ValidationMessageFor(model => model.DateDebut, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col">
                                                <input type="time" id="timeDebut" name="timeDebut" style="padding:2px;">
                                                @Html.ValidationMessageFor(model => model.DateDebut, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-input ">
                                        <label for="chequeno">AU</label>
                                        <div class="row align-items-start">
                                            <div class="col">
                                                <input type="DATE" name="dateFin" id="dateFin" style="padding:2px;" />
                                                @Html.ValidationMessageFor(model => model.DateFin, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col">
                                                <input type="time" id="timeFin" name="timeFin" style="padding:2px;">
                                                @Html.ValidationMessageFor(model => model.DateFin, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>
                                    <div>
                                        <div class="form-group shadow-textarea">
                                            <label for="justification">Justification</label>
                                            <textarea class="form-control z-depth-1" name="justification" id="justification" rows="4" placeholder="votre justification"></textarea>
                                        </div>
                                    </div>

                                    <div class="form-submit ">

                                        <div class="row align-items-start">
                                            <div class="col">
                                                @*<input type="submit" value="Envoyer" class=" btn btn-lg btn-success " id="submit" name="submit" />*@
                                                <button type="submit" style="padding-left:60px; padding-right:60px;" class="btn btn-primary btn-primary  btn-lg bt" id="submit" name="submit"> Valider </button>
                                            </div> <div class="col">
                                                <button type="reset" style="padding-left:60px; padding-right:60px;" class="btn btn-primary btn-danger btn-lg" name="reset"> Reset </button>
                                            </div>
                                        </div>


                                    </div>

                                </div>

                            </div>



                        </div>

                    }
                </div>

            </div>
        </div>
    </div>
</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}



<!-- JS -->
<script src="~/Content/cont2/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/cont2/vendor/nouislider/nouislider.min.js"></script>
<script src="~/Content/cont2/vendor/wnumb/wNumb.js"></script>
<script src="~/Content/cont2/vendor/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/Content/cont2/vendor/jquery-validation/dist/additional-methods.min.js"></script>
<script src="~/Content/cont2/js/main.js"></script>




