
@{
    ViewBag.Title = "Donnée";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded-lg mt-5" style="margin-right:280px; margin-left:280px; ">
    <div class="card-header"><h3 class="text-center font-weight-blod my-4">Donné personnel</h3></div>
    <div class="card-body border-danger">
        <table class="table table-bordered border-success zmdi-hc-border-circle">

            <tr>
                <td class="table-warning text-center " style="font-weight:bold;" >Nom Complet </td>
                <td class="table-light text-center">@Session["userName"]</td>
            </tr>

            <tr>
                <td class="table-warning text-center" style="font-weight:bold;">Matricule</td>
                <td class="table-light text-center">@Session["matricule"]</td>
            </tr>
            <tr>
                <td class="table-warning text-center" style="font-weight:bold;">Classe</td>
                <td class="table-light text-center">@Session["Classe"]</td>
            </tr>
            <tr>
                <td class="table-warning text-center" style="font-weight:bold;">Date Début</td>
                <td class="table-light text-center">@Session["DateDébut"]</td>
            </tr>
            <tr>
                <td class="table-warning text-center" style="font-weight:bold;">Date Fin</td>
                <td class="table-light text-center">@Session["DateFin"]</td>
            </tr>
            <tr>
                <td class="table-warning text-center" style="font-weight:bold;">Jours de Congé</td>
                <td class="table-light text-center">@Session["nbjours"]</td>
            </tr>
            <tr>
                <td class="table-warning text-center" style="font-weight:bold;">Mot de Passe</td>
                <td class="table-light text-center ">@Session["password"] <a class="nav-link" href="@Url.Action("changePassword","employe")">Modifier</a></td>
            </tr>



        </table>

    </div>
</div>
