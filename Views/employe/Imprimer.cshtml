@model GestionAbscences.Data.demandeconge
@{
    ViewBag.Title = "Validation";

}



<div class="container">

    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-lg mt-5 " style="margin-right:90px; margin-left:60px;height:auto;">

 <h2 class="text-center font-weight-bold my-2 font-italic text-warning text-decoration-underline"> TITRE DE CONGE </h2>
                </br>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <form>
                            <table class="table table-light table-striped" style="margin-left:90px;margin-right:90px; width:750px; margin-top:10px;">
                                <tr>
                                    <td style="font-weight:bold; text-align:center;">
                                        Nom complet
                                    </td>
                                    <td>
                                        @Model.employe.NomComplet
                                    </td>
                                    <td style="font-weight:bold; text-align:center;">
                                        Matricule
                                    </td>
                                    <td>
                                        @Model.employe.matricule
                                    </td>

                                </tr>
                                <tr>
                                    <td style="font-weight:bold; text-align:center;">
                                        Type de congé
                                    </td>
                                    <td>
                                        @Model.typeconge.designation
                                    </td>
                                    <td style="font-weight:bold; text-align:center;">
                                        Date de demande
                                    </td>
                                    <td>
                                        @Model.DateDC
                                    </td>
                                </tr>

                                <tr>
                                    <td style="font-weight:bold; text-align:center;">
                                        Date début
                                    </td>
                                    <td>
                                        @Model.DateDebut
                                    </td>
                                    <td style="font-weight:bold; text-align:center;">
                                        Date fin

                                    </td>
                                    <td>
                                        @Model.DateFin
                                    </td>
                                </tr>
                            </table>
                            <br />

                            <div class="col-12" style="font-weight:bold; margin-left:70px; color:cornflowerblue; font-size:20px;">
                                Validation  :
                            </div>
                            <br />

                            <div class="row align-items-start">

                                <div class="col" style="font-weight:bold; text-align:center; font-size:20px; margin-left:150px;">
                                    N+1
                                </div>
                                <div class="col">
                                    <input type="radio" name="validation1" id="Accepte" value="Accepte">
                                    <label for="Accepte">Accepté</label>
                                </div>
                                <div class="col">
                                    <input type="radio" name="validation1" id="Refuse" value="Refuse">
                                    <label for="Refuse">Refusé</label>
                                </div>
                                <div class="col">
                                </div>
                                <div class="col">
                                </div>
                            </div>
                            <div class="row align-items-start">
                                <div class="col" style="font-weight:bold; text-align:center; font-size:20px; margin-left:150px;">
                                    N+2
                                </div>
                                <div class="col">
                                    <input type="radio" name="validation2" id="Accepte" value="Accepte">
                                    <label for="Accepte">Accepté</label>
                                </div>

                                <div class="col">
                                    <input type="radio" name="validation2" id="Refuse" value="Refuse">
                                    <label for="Refuse">Refusé</label>
                                </div>
                                <div class="col">
                                </div>
                                <div class="col">
                                </div>
                            </div>
                            <br /> <br /><br /><br />
                            <div class="col-4">

                                <button type="submit" style="padding-left:40px; margin-left:380px; padding-right:40px" class="btn btn-info btn-primary  btn-lg bt" id="submit" name="submit"> Enregistrer </button>
                            </div>
                        </form>
                    </div>

                }


            </div>
        </div>
    </div>
</div>