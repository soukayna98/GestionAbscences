@model GestionAbscences.Data.employe

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_offlineLayout.cshtml";
}

<title> Login  </title>



<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>



<div class="card shadow-lg border-0 rounded-lg mt-5">
    <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
    <div class="card-body">

        @* <form action="/">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post)) *@

        @using (Html.BeginForm("Index", "Login", FormMethod.Post))

        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()


            <div class="form-group">

                <label class="small mb-1" for="inputEmailAddress">Identifiant</label>
                @* <label >id</label>*@
                @Html.TextBoxFor(m => m.matricule, new { @class = "form-control py-4", placeholder = "Enter identifiant" })
                @* @Html.LabelFor(m => m.Id)*@
                @* <input class="form-control py-4" id="inputEmailAddress" type="email" placeholder="Enter email address" />*@
            </div>


            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Password</label>
                @*<input class="form-control py-4" id="inputPassword" type="password" placeholder="Enter password" />*@

                @Html.TextBoxFor(m => m.password, new { @class = "form-control py-4", placeholder = "Enter Password", type = "password" })
                @* @Html.LabelFor(m => m.Id)*@

            </div>

            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </div>
        }
    </div>

    <div style="color:red;">
        @Session["message"]
    </div>
    @if (ViewBag.Message != null)
    {
<script type="text/javascript">
            window.onload = function () {
                swal("@ViewBag.Message");
                    };
</script>
    }

    @*@ @if (Model != null && Model.Message != null)
        {
            <div class="alert alert-danger">
                @Model.Message

            </div>
        }*@

</div>
