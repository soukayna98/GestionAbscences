@model GestionAbscences.Data.typeconge

@{
    ViewBag.Title = "Modifier";

}


    <div class="container">
        <br>

        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card shadow-lg border-0 rounded-lg mt-0 " style="margin-right:120px;margin-top:10px; margin-left:120px;height:auto;">

                    <div class="card-header " style="background-color:#EFEFEF;  padding:10px;"><h2 class="text-center font-weight-bold my-0">Modifier un type de congé </h2></div>

                    <br>    <br>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.idtypeConge)

                    <div class="form-group">
                        <div class="row align-items-start">
                            <div class="col-3" style="padding-left: 60px; font-weight: bold;">
                                Designation
                            </div>
                            <div class="col-8">
                                @Html.EditorFor(model => model.designation, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.designation, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row align-items-start">
                            <div class="col-3" style="padding-left:60px; font-weight:bold;">
                                Durée
                            </div>
                            <div class="col-8">
                                @Html.EditorFor(model => model.dureeJ, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.dureeJ, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>


                    <br>


                    <div class="form-group">
                        <div class="row align-items-start">
                            <div class="col-5">
                            </div>
                            <div class="col-4">

                                <input type="submit" value="Enregistrer" class="btn btn-success" style="padding-left:60px; padding-right:60px;">

                            </div>
                        </div>
                    </div>
                    <br />

                   
                </div>
                    }

                    <div style="margin-left:100px;">
                        @Html.ActionLink("Retour à la liste ", "Index")

                    </div>
                    <br>    <br>

                </div>
            </div>
        </div>
    </div>
