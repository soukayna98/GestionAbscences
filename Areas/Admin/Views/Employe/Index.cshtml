                        </tr>
                    </thead>
                    <tfoot>


                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.matricule)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomComplet)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Classe)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateDebut)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateFin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nbjours)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nbjoursR)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.affectation)
                            </td>
                            <td>
                                @* <a href="@Url.Action("Delete", new {item.Id })" class="btn btn-danger">Delete</a>*@
                                <a href="@Url.Action("Edit", new {item.idEmploye })" class="btn btn-warning">Edit</a>

                                @* @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                                @* @Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                                 @Html.ActionLink("Delete", "Delete", new { id = item.idEmploye })
                            </td>
                        </tr>
                        }
