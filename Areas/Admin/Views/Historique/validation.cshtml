@model GestionAbscences.Data.demandeconge

@{
    ViewBag.Title = "Validation";

}



<div class="container">

    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-lg mt-0 " style="margin-right:90px; margin-left:60px;height:auto;">

                <div class="card-header " style="background-color:cornsilk; padding:30px;"><h2 class="text-center font-weight-bold my-0">Validez la demande de congé</h2></div>


                @using (Html.BeginForm())
                {

                    @Html.AntiForgeryToken()
                   

            <div class="form-group">
                <form>
                    <table class="table table-light table-striped" style="margin-left:90px;margin-right:90px; width:750px; margin-top:10px;">
                        <tr>
                            <td style="font-weight:bold; text-align:center;">
                                Nom complet
                            </td>
                            <td>
                                @Model.employe.NomComplet
                            </td>
                            <td style="font-weight:bold; text-align:center;">
                                Matricule
                            </td>
                            <td>
                                @Model.employe.matricule
                            </td>

                        </tr>
                        <tr>
                            <td style="font-weight:bold; text-align:center;">
                                Type de congé
                            </td>
                            <td>
                                @Model.typeconge.designation
                            </td>
                            <td style="font-weight:bold; text-align:center;">
                                Date de demande
                            </td>
                            <td>
                                @Model.DateDC
                            </td>
                        </tr>

                        <tr>
                            <td style="font-weight:bold; text-align:center;">
                                Date début
                            </td>
                            <td>
                                @Model.DateDebut
                            </td>
                            <td style="font-weight:bold; text-align:center;">
                                Date fin

                            </td>
                            <td>
                                @Model.DateFin
                            </td>
                        </tr>
                    </table>
                    <br />

                    <div class="col-12" style="font-weight:bold; margin-left:70px; color:cornflowerblue; font-size:20px;">
                        Validation  :
                    </div>
                    <br />

                    <div class="row align-items-start">
                        <div class="col-3">
                            <button type="submit" style="padding-left:40px; margin-left:140px; padding-right:40px" class="btn btn-success   btn-lg bt" id="submit" name="button" value="Accepté">Accepté</button>
                        </div>
                        <div class="col-3">
                            <button type="submit" style="padding-left:40px; margin-left:140px; padding-right:40px" class="btn btn-danger btn-primary  btn-lg bt" name="button" value="Refusé">Refusé</button>
                        </div>
                        <div class="col-3">
                            <button type="submit" style="padding-left:40px; margin-left:140px; padding-right:40px" class="btn btn-white btn-primary  btn-lg bt" name="button" value="Annulé"> Annulé</button>
                        </div>
                    </div>


                </form>
            </div>

        }


            </div>
        </div>
    </div>
</div>

